// -- IMPORTS

import 'controller.php';
import '../../MODEL/section_model.php';

// -- TYPES

class DO_ADD_SECTION_CONTROLLER extends CONTROLLER
{
    method constructor(
        )
    {
        parent::constructor();

        var name = GetPostValue( 'Name' );
        var slug = GetPostValue( 'Slug' );

        AddDatabaseSection( name, slug );

        Redirect( '/admin/section' );
    }
}

// -- STATEMENTS

var do_add_section_controller = new DO_ADD_SECTION_CONTROLLER();
