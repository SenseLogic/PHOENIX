html
{
    background: #FFFFFF;
}

body
{
    min-height: 100vh;
}

a
{
    color: inherit;
    text-decoration: none;
}

a:hover
{
    color: inherit;
    cursor: pointer;
}

a:hover,
input:hover
{
    text-decoration: none;
}

a:focus,
button:focus,
input:focus,
textarea:focus
{
    outline: none;
}

.page-container
{
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr;
    min-height: 100vh;
}

.page-menu
{
    grid-area: 1 / 1 / span 2;
    padding: 15 * Pxm;
    display: flex;
    background-image: linear-gradient( to right, #29323c 0%, #485563 100%);
    width: 72 * Pxm;
}

.page-menu-content
{
    position: fixed;
}

.page-menu-item
{
    margin-top: 10 * Pxm;
}

.page-menu-title
{
    margin-left: 5 * Pxm;
    font-size: 20 * Pxm;
    color: #FFFFFF;
}

.page-title
{
    grid-area: 1 / 2;
    padding: 15 * Pxm;
    text-align: center;
    background-image: linear-gradient( to top, #4481eb 0%, #04befe 100%);
}

.page-title-content
{
    font-size: 28 * Pxm;
    color: #FFFFFF;
}

.page-body
{
    grid-area: 2 / 2;
    padding: 15 * Pxm;
    background-image: linear-gradient( to top, #fdfbfb 0%, #ebedee 100%);
}

.page-body-content
{
    color: #222222;
}

.page-section
{
    border-radius: 10 * Pxm;
    background-color: #FFFFFF;
    padding: 15 * Pxm;
}

.form-container
{
    display: grid;
    grid-template-columns: auto 1fr;
    grid-gap: 15 * Pxm;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
}

.form-container-small
{
    max-width: 30rem;
}

.form-extended
{
    grid-column: 1 / -1;
}

.form-input
{
    display: block;
    border: 1px solid #CCCCCC;
    border-radius: 5 * Pxm;
    padding: 5 * Pxm;
    width: 100%;
}

.form-textarea
{
    display: block;
    border: 1px solid #CCCCCC;
    border-radius: 5 * Pxm;
    padding: 5 * Pxm;
    width: 100%;
    height: 36 * Pxm;
    min-height: 36 * Pxm;
    overflow: hidden;
}

.form-upload-container
{
    display: flex;
    align-items: center;
    margin-top: 8 * Pxm;
}

.form-upload-image,
.form-upload-video
{
    border-radius: 5 * Pxm;
    width: auto;
    max-width: 80%;
    height: 200 * Pxm;
}

.form-upload-icon
{
    margin-left: 4 * Pxm;
    height: 16 * Pxm;
}

.form-upload-file
{
    height: 0;
    width: 0;
    overflow: hidden;
}

.form-field-name
{
    font-weight: bold;
    padding-top: 5 * Pxm;
}

.form-column-name
{
    font-weight: bold;
}

.form-centered
{
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-button
{
    display: inline-block;
    border: none;
    width: 24 * Pxm;
    height: 24 * Pxm;
}

.form-button + .form-button
{
    margin-left: 5 * Pxm;
}

.form-button-large
{
    width: 40 * Pxm;
    height: 40 * Pxm;
}

